# Enable rewriting
RewriteEngine On

# Ensure we are in the base folder
RewriteBase /

# Redirect requests with .php or .html to the clean version
RewriteCond %{THE_REQUEST} \s([^.]+)\.(php|html)\s [NC]
RewriteRule ^ %1 [R=301,L]

# Internally rewrite clean URLs to the actual file
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Optional: serve index.php or index.html for the root
DirectoryIndex index.php index.html